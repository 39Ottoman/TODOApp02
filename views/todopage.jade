extends header

block content
  div.content
    p#listName
    p#listId(style='display: none')= listId
    label(for='newTodoName') ToDo名
    input(id='newTodoName', name='newTodoName', type='text', placeholder='ToDoを入力してください', size=30)
    br
    label(for='limitDate') 期限
    input(id='limitDate', name='limitDate', type='date', style='width: 238px;', required)
    input(id='createTodoButton', type='button', value='ToDoの作成')
    p#todosMessage
    div#todos

// jQueryとtodo.jsを読み込む
block scripts
  script(src='http://code.jquery.com/jquery-2.0.0.min.js')
  script(src='/javascripts/todos.js')